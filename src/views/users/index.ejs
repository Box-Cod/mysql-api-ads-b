<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Usuários</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Papel</th>
                    <th>Data de Cadastro</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if(users.length > 0) { %>
                    <% users.forEach(user => { %>

                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td><%= user.registration_dt.toLocaleString() %></td>
                            <td>
                                <div class="conteiner text-center">
                                    <div class="row justify-content-center align-items-center">
                                        <div class="col-6">
                                            <a href="#" class="btn btn-primary py-1">editar</a>
                                        </div>
                                        <div class="col-6">
                                            <form action="/users/delete/<%= user.id %>" method="post">
                                                <button type="submit" class="btn btn-primary py-1">Excluir</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    <% }) %>

                <% } else { %>

                    <tr>
                        <td colspan="6">Nenhuma categoria cadastrada</td>
                    </tr>

                <%}  %>
                
            </tbody>
        </table>
        <a href="/users/form" class="btn btn-primary mt-3">Adicionar</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>